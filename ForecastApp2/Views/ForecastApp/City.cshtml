@model ForecastApp.ForecastAppModels.City

@{
    ViewData["Title"] = "City";
}

<div class="container">

    <div class="container">

        <div class="form-group col-md-offset-3 col-md-5">

            <h2>Forecast for the selected city</h2>

            <label asp-for="Name"></label>
            <span class="badge">@Model.Name</span>
            <br />

            <label asp-for="Temp"></label>
            <span class="badge">@Model.Temp °C</span>
            <br />

            <label asp-for="Humidity"></label>
            <span class="badge">@Model.Humidity %</span>
            <br />

            <label asp-for="Pressure"></label>
            <span class="badge">@Model.Pressure Hpa</span>
            <br />

            <label asp-for="Wind"></label>
            <span class="badge">@Model.Wind Km/h</span>
            <br />

            <label asp-for="Weather"></label>
            <span class="badge">@Model.Weather</span>

            <label asp-for="Coordinates"></label>
            <span class="badge">@Model.Coordinates.Lat </span>
            <br />

            <label asp-for="Coordinates"></label>
            <span class="badge">@Model.Coordinates.Lon </span>
            <br />

           

            
            <img src="@Model.Icon" />

        </div>

    </div>

    <div class="container">

        <div class="form-group col-md-offset-3 col-md-5">

            <form method="get">
                <button asp-controller="ForecastApp" asp-action="SearchCity" class="btn btn-success">Return</button>
            </form>

        </div>

        <iframe width="600"
                height="450"
                style="border:0"
                loading="lazy"
                allowfullscreen
                src=$"https://www.google.com/maps/embed/v1/view?&key={GOOGLE_MAPS_APPID}&center=30.2672,97.7431&zoom=12&maptype=satellite">
        </iframe>


    </div>

</div>